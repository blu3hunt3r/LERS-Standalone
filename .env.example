# ═══════════════════════════════════════════════════════════════════
# STANDALONE LERS PLATFORM - ENVIRONMENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
#
# This is a completely independent deployment separate from CMS
#
# Copy this to .env.lers-standalone and customize
#
# ═══════════════════════════════════════════════════════════════════

# ═══════════════════════════════════════════════════════════════════
# ENVIRONMENT
# ═══════════════════════════════════════════════════════════════════

ENVIRONMENT=production
DEBUG=False

# ═══════════════════════════════════════════════════════════════════
# DJANGO SECRET KEYS
# ═══════════════════════════════════════════════════════════════════

SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
EVIDENCE_ENCRYPTION_KEY=your-encryption-key-here-base64-encoded

# ═══════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION (PostgreSQL)
# ═══════════════════════════════════════════════════════════════════

POSTGRES_DB=lers_db
POSTGRES_USER=lers_admin
POSTGRES_PASSWORD=lers_secure_pass_2025_change_this
POSTGRES_PORT=5434

# ═══════════════════════════════════════════════════════════════════
# REDIS CONFIGURATION
# ═══════════════════════════════════════════════════════════════════

REDIS_PASSWORD=lers_redis_pass_2025_change_this
REDIS_PORT=6380

# ═══════════════════════════════════════════════════════════════════
# MINIO / S3 STORAGE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════

MINIO_ROOT_USER=lers_minio_admin
MINIO_ROOT_PASSWORD=lers_minio_pass_2025_change_this
MINIO_API_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_BUCKET_NAME=lers-evidence

# ═══════════════════════════════════════════════════════════════════
# APPLICATION PORTS
# ═══════════════════════════════════════════════════════════════════

BACKEND_PORT=8100
SOCKET_PORT=8102
LE_PORTAL_PORT=3100
PROVIDER_PORTAL_PORT=3101
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# ═══════════════════════════════════════════════════════════════════
# CORS & ALLOWED HOSTS
# ═══════════════════════════════════════════════════════════════════

ALLOWED_HOSTS=localhost,127.0.0.1,lers.yourdomain.com
CORS_ALLOWED_ORIGINS=https://lers.yourdomain.com,https://provider.lers.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ═══════════════════════════════════════════════════════════════════
# SECURITY SETTINGS
# ═══════════════════════════════════════════════════════════════════

SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
CSRF_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# ═══════════════════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════════════════

LOG_LEVEL=INFO
JSON_LOGS=true

# ═══════════════════════════════════════════════════════════════════
# EMAIL CONFIGURATION (Optional - for notifications)
# ═══════════════════════════════════════════════════════════════════

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password

# ═══════════════════════════════════════════════════════════════════
# SLA CONFIGURATION
# ═══════════════════════════════════════════════════════════════════

DEFAULT_SLA_HOURS=168  # 7 days
URGENT_SLA_HOURS=48    # 2 days
CRITICAL_SLA_HOURS=24  # 1 day

# ═══════════════════════════════════════════════════════════════════
# PLATFORM BRANDING
# ═══════════════════════════════════════════════════════════════════

PLATFORM_NAME=LERS Platform
PLATFORM_TAGLINE=Law Enforcement Request System
SUPPORT_EMAIL=support@lers.yourdomain.com

# ═══════════════════════════════════════════════════════════════════
# END OF CONFIGURATION
# ═══════════════════════════════════════════════════════════════════
